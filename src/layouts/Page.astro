		</section>
		<section class="column">
			<slot/>
		</section>
	</main>
	<Footer />
</Skeleton>
<style is:global>
	main.container {
		margin: 0 auto;
		padding-top: 1rem;
	}

	#main-nav {
		flex-direction: column;
	}

	.main-navs .navbar {
		display: flex;
		background-color: transparent;
	}

	i.icon {
		font-family: "Material Symbols Sharp";
		font-style: normal !important;
	}

	#contacts p {
		align-items: flex-start;
	}
</style>