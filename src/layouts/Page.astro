---
import Footer from '../components/Footer.astro';
import Skeleton from './Skeleton.astro';

import "bulma/sass/layout/container.scss";
import "bulma/sass/grid/columns.scss";
import "bulma/sass/components/card.scss";
import "bulma/sass/components/navbar.scss";
import "bulma/sass/elements/title.scss";
import "bulma/sass/elements/icon.scss";

import BrandIcon from '../components/BrandIcon.astro';
import NavLink from '../components/NavLink.astro';
import NavDropdown from '../components/NavDropdown.astro';

const { title, description } = Astro.props;
---
<Skeleton title={title} description={description}>
	<main class="container columns">
		<section class="column is-one-third">
			<h1 class="title">Friedrich Zimniak</h1>
			<h2 class="subtitle">Softwareentwickler</h2>
			<div class="main-navs">
				<nav id="main-nav" class="navbar" role="navigation">
					<NavLink href="/"><i class="icon">person</i>Ãœber Mich</NavLink>
					<NavLink href="/projects"><i class="icon">sdk</i>Projekte</NavLink>
					<NavDropdown>
						<Fragment slot="opener"><i class="icon">contact_mail</i>Kontakt</Fragment>
						<div id="contacts">
							<p class="navbar-item"><i class="icon">email</i><a href="mailto:work@frizim.com" aria-label="E-Mail-Adresse">work@frizim.com</a> (<a class="p-0" href="https://keyoxide.frizim.com/work%40frizim.com">GPG-Key</a>)</p>
							<p class="navbar-item"><BrandIcon icon="signal" width="24" height="16" color="var(--bulma-navbar-item-color)" /><a href="https://signal.me/#eu/UtT3Zw9Auu9y6Mtg8J828quZj-Bz1POtu3QFedgDe_mpN51UerhPq5kwl6O-W4wcp" aria-label="Signal-Account">@friedrich.668</a></p>
						</div>
					</NavDropdown>
				</nav>
				<nav class="navbar is-text-centered is-justify-content-center">
					<a class="navbar-item" href="https://github.com/frizim" aria-label="GitHub" target="_blank"><BrandIcon icon="github-icon" color="var(--bulma-navbar-item-color)" /></a>
