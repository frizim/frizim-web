---
const {href} = Astro.props;
const active = href ? href == Astro.routePattern : false;
---
{href ? 
    (<a class:list={["navbar-item", active && "is-selected"]} href={href}><slot/><span></span></a>) : 
    (<p class:list={["navbar-item", active && "is-selected"]}><slot/><span></span></p>)
}
<style>
    .navbar-item {
        position: relative;
		display: flex;
        padding: 0.5rem 0;
        width: 100%;
        user-select: none;
        color: var(--primary-text);
        line-height: 1.5;
	}

    .navbar-item > svg {
        max-height: 1.75rem;
    }

    .navbar-item:hover {
        background-color: inherit;
    }

	.navbar-item.is-selected {
		background-color: inherit;
	}

    .navbar-item span {
        width: 0;
        border-bottom: 2px solid hsl(178deg, 83%, 31%);
        transition: width 0.5s;
        position: absolute;
        bottom: 0;
        left: 0;
    }

    .navbar-item.is-selected span, .navbar-item:hover span {
        width: 100%;
        padding: inherit;
    }
</style>