---
interface FormField {
    name: string;
    label: string;
    type?: "text" | "password" | "email";
    minLength?: number;
    maxLength: number;
}

const {origin} = Astro.props;
---
<form class="pure-form pure-form-stacked" method="post" action={"/sendmessage" + origin} hx-boost hx-post={"/sendmessage" + origin}>
    {Astro.props.fields.map((field: FormField) => (
        <div class="field">
            <label class="label" for={field.name}>{field.label}</label>
            <input class="input" type={field.type ?? "text"} name={field.name} id={field.name} minlength={field.minLength ?? 1} maxlength={field.maxLength} required />
        </div>))}
    <label class="label" for="message">Nachricht</label>
    <textarea class="textarea" name="message" id="message" minlength="10" maxlength="2000" rows="10" required></textarea>
    <label class="checkbox" for="agree-privacy">
        <input type="checkbox" name="agree-privacy" id="agree-privacy">
        Ich stimme der Verarbeitung meiner Daten gemäß der <a href="/privacy">Datenschutzerklärung</a> zu.
    </label>
    <button class="pure-button pure-button-primary" type="submit">Nachricht senden</button>
</form>
<style>
    form {
        max-width: 600px;
    }

    textarea {
        width: 100%;
    }
</style>