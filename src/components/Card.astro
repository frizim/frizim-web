---
import {Image} from "astro:assets";

const {
    icon,
    title,
    enableFooter,
    classes
} = Astro.props;
---
<div class:list={["card-wrapper", classes]}>
    <div class="card">
        <div class="card-header">
            <p class="card-header-icon p-0 m-2"><Image src={icon} width="64" alt="" /></p>
            <h2 class="card-header-title title">{title}</h2>
            <slot name="header" />
        </div>
        <div class="card-content">
            <slot/>
        </div>
        {enableFooter && (<footer class="card-footer navbar">
            <slot name="footer" />
        </footer>)}
    </div>
</div>
<style>
    .card-wrapper {
        box-sizing: border-box;
        padding: 1rem;
    }

    .card {
        height: 100%;
        background-color: var(--primary-background-medium);
        display: grid;
        grid-template-rows: 0fr 1fr 0fr;
        border-radius: var(--card-radius);
    }

    .card-header {
        display: flex;
        flex-direction: row;
        grid-row: 1 / 1;
        text-wrap: wrap;
    }

    .card-header-icon, .card-header-title {
        margin: 0;
        padding: 0.75rem 1rem;
    }

    .card-header-title {
        font-size: 1.5rem;
        margin-top: 0;
    }

    .card-header img {
        min-width: 64px;
        width: 64px;
    }

    .card-header > .tag {
        border-bottom-right-radius: 0;
        border-top-left-radius: 0;
    }

    .card-content {
        grid-row: 2 / 2;
        text-wrap: wrap;
        padding: 1.5rem;
        margin-top: auto;
        margin-bottom: auto;
    }

    .card-footer {
        grid-row: 3 / 3;
        display: flex;
        justify-content: center;
        align-items: center;
        min-height: 3.25rem;
        border-top: 1px solid hsl(178,85%,21%);
    }

    .card-footer > * {
        flex: 1 0 0;
    }

    .card-footer, footer.card-footer > * {
        border-bottom-left-radius: var(--card-radius);
        border-bottom-right-radius: var(--card-radius);
        width: 100%;
        height: 100%;
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>